load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "OCMock",
  module_name = "OCMock",
  bundle_id = "org.cocoapods.OCMock",
  link_dynamic = True,
  testonly = True,
  infoplists = [
    ":OCMock_InfoPlist"
  ],
  platforms = {
    "ios": "12.0"
  },
  non_arc_srcs = glob(
    [
      "Source/OCMock/*.h",
      "Source/OCMock/*.m"
    ]
  ),
  public_headers = glob(
    [
      "Source/OCMock/NSNotificationCenter+OCMAdditions.h",
      "Source/OCMock/OCMArg.h",
      "Source/OCMock/OCMConstraint.h",
      "Source/OCMock/OCMFunctions.h",
      "Source/OCMock/OCMLocation.h",
      "Source/OCMock/OCMMacroState.h",
      "Source/OCMock/OCMQuantifier.h",
      "Source/OCMock/OCMRecorder.h",
      "Source/OCMock/OCMStubRecorder.h",
      "Source/OCMock/OCMVerifier.h",
      "Source/OCMock/OCMock.h",
      "Source/OCMock/OCMockMacros.h",
      "Source/OCMock/OCMockObject.h"
    ]
  ),
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_frameworks = [
    "XCTest"
  ],
  visibility = [
    "//visibility:public"
  ]
)
genrule(
  name = "OCMock_InfoPlist",
  srcs = [],
  outs = [
    "OCMock_InfoPlist.plist"
  ],
  cmd = """cat <<EOF > $@
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleIdentifier</key>
	<string>org.cocoapods.OCMock</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>OCMock</string>
	<key>CFBundlePackageType</key>
	<string>FMWK</string>
	<key>CFBundleShortVersionString</key>
	<string>3.9.3</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleSupportedPlatforms</key>
	<array>
		<string>iPhoneSimulator</string>
		<string>iPhoneOS</string>
	</array>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>MinimumOSVersion</key>
	<string>12.0</string>
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer>
		<integer>2</integer>
	</array>
</dict>
</plist>

EOF"""
)