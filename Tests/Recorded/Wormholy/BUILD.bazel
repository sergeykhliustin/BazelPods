# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "Wormholy",
  module_name = "Wormholy",
  bundle_id = "org.cocoapods.Wormholy",
  swift_version = "5",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":Wormholy_InfoPlist"
  ],
  platforms = {
    "ios": "11.0"
  },
  srcs = glob(
    [
      "Sources/**/*.h",
      "Sources/**/*.m",
      "Sources/**/*.swift"
    ]
  ),
  public_headers = glob(
    [
      "Sources/**/*.h"
    ]
  ),
  deps = [
    ":Wormholy_Wormholy_Bundle"
  ],
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_frameworks = [
    "Foundation"
  ],
  visibility = [
    "//visibility:public"
  ]
)
precompiled_apple_resource_bundle(
  name = "Wormholy_Wormholy_Bundle",
  bundle_id = "org.cocoapods.Wormholy",
  bundle_name = "Wormholy",
  infoplists = [
    ":Wormholy_Wormholy_Bundle_InfoPlist"
  ],
  resources = glob(
    [
      "Sources/**/*.css",
      "Sources/**/*.js",
      "Sources/**/*.storyboard",
      "Sources/**/*.xib"
    ]
  )
)
