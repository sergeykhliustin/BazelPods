  swift_copts = [
    "-Xcc",
    "-ITests/Pods/libde265",
    "-Xcc",
    "-ITests/Pods/libde265/libde265",
    "-Xcc",
    "-ITests/Pods/libde265/libde265/libde265",
    "-Xcc",
    "-ITests/Pods/libde265/libde265/libde265"
  ],
  xcconfig = {
    "GCC_PREPROCESSOR_DEFINITIONS": [
