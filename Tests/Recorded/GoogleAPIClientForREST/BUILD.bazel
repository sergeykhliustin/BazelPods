# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "GoogleAPIClientForREST",
  module_name = "GoogleAPIClientForREST",
  bundle_id = "org.cocoapods.GoogleAPIClientForREST",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":GoogleAPIClientForREST_InfoPlist"
  ],
  platforms = {
    "ios": "10.0"
  },
  srcs = glob(
    [
      "Sources/Core/**/*.h",
      "Sources/Core/**/*.m"
    ]
  ),
  public_headers = glob(
    [
      "Sources/Core/Public/GoogleAPIClientForREST/*.h"
    ]
  ),
  deps = [
    "//Tests/Pods/GTMSessionFetcher:GTMSessionFetcher",
    ":GoogleAPIClientForREST_GoogleAPIClientForREST_Privacy_Bundle"
  ],
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  visibility = [
    "//visibility:public"
  ]
)
