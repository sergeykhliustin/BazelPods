load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
config_setting(
  name = "ios_arm64",
  values = {
    "cpu": "ios_arm64"
  }
)
config_setting(
  name = "ios_armv7",
  values = {
    "cpu": "ios_armv7"
  }
)
config_setting(
  name = "ios_i386",
  values = {
    "cpu": "ios_i386"
  }
)
config_setting(
  name = "ios_sim_arm64",
  values = {
    "cpu": "ios_sim_arm64"
  }
)
config_setting(
  name = "ios_x86_64",
  values = {
    "cpu": "ios_x86_64"
  }
)
apple_framework(
  name = "MangoFix",
  module_name = "MangoFix",
  bundle_id = "org.cocoapods.MangoFix",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":MangoFix_InfoPlist"
  ],
  platforms = {
    "ios": "11.0"
  },
  srcs = glob(
    [
      "MangoFix/**/*.c",
      "MangoFix/**/*.h",
      "MangoFix/**/*.m"
    ]
  ),
  deps = [
    "//Tests/Pods/symdl:symdl"
  ] + select(
    {
      "//conditions:default": [],
      ":ios_arm64": [
        ":MangoFix_libffi_VendoredLibrary"
      ],
      ":ios_armv7": [
        ":MangoFix_libffi_VendoredLibrary"
      ],
      ":ios_i386": [
        ":MangoFix_libffi_VendoredLibrary"
      ],
      ":ios_sim_arm64": [
        ":MangoFix_libffi.a_ios_sim_arm64__VendoredLibrary"
      ],
      ":ios_x86_64": [
        ":MangoFix_libffi_VendoredLibrary"
      ]
    }
  ),
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  xcconfig = {
    "GCC_INPUT_FILETYPE": "sourcecode.c.objc"
  },
  visibility = [
    "//visibility:public"
  ]
)
objc_import(
  name = "MangoFix_libffi_VendoredLibrary",
  archives = [
    "MangoFix/libffi/libffi.a"
  ]
)
objc_import(
  name = "MangoFix_libffi.a_ios_sim_arm64__VendoredLibrary",
  archives = [
    "MangoFix/libffi/._ios_sim_arm64_/libffi.a"
  ]
)
genrule(
  name = "MangoFix_InfoPlist",
  srcs = [],
  outs = [
    "MangoFix_InfoPlist.plist"
  ],
  cmd = """cat <<EOF > $@
