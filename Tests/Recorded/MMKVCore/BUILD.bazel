  ),
  public_headers = glob(
    [
      "Core/MMBuffer.h",
      "Core/MMKV.h",
      "Core/MMKVLog.h",
      "Core/MMKVPredef.h",
      "Core/PBUtility.h",
      "Core/ScopedLock.hpp",
      "Core/ThreadLock.h",
      "Core/aes/openssl/openssl_md5.h",
      "Core/aes/openssl/openssl_opensslconf.h"
    ]
  ),
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_dylibs = [
    "c++",
    "z"
  ],
  sdk_frameworks = [
    "CoreFoundation",
    "UIKit"
  ],
  xcconfig = {
    "CLANG_CXX_LANGUAGE_STANDARD": "gnu++17",
    "CLANG_CXX_LIBRARY": "libc++",
    "CLANG_WARN_OBJC_IMPLICIT_RETAIN_SELF": "NO"
  },
  visibility = [
    "//visibility:public"
  ]
)
