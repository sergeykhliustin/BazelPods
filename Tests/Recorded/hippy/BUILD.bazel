load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "hippy",
  module_name = "hippy",
  bundle_id = "org.cocoapods.hippy",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":hippy_InfoPlist"
  ],
  platforms = {
    "ios": "10.0"
  },
  srcs = glob(
    [
      "core/**/*.cc",
      "core/**/*.h",
      "ios/sdk/**/*.c",
      "ios/sdk/**/*.cc",
      "ios/sdk/**/*.cpp",
      "ios/sdk/**/*.h",
      "ios/sdk/**/*.m",
      "ios/sdk/**/*.mm",
      "ios/sdk/**/*.s"
    ]
  ),
  public_headers = glob(
    [
      "core/include/**/*.h",
      "ios/sdk/**/*.h"
    ]
  ),
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_dylibs = [
    "c++"
  ],
  sdk_frameworks = [
    "AVFoundation",
    "Accelerate",
    "CoreGraphics",
    "CoreServices",
    "CoreTelephony",
    "CoreText",
    "ImageIO",
    "JavaScriptCore",
    "MobileCoreServices",
    "QuartzCore",
    "Security",
    "SystemConfiguration",
    "WebKit"
  ],
  objc_copts = [
    "-ITests/Pods/hippy/core/third_party/base/include/",
    "-ITests/Pods/hippy/core/include/"
  ],
  swift_copts = [
    "-Xcc",
    "-ITests/Pods/hippy/core/third_party/base/include/",
    "-Xcc",
    "-ITests/Pods/hippy/core/include/"
  ],
  visibility = [
    "//visibility:public"
  ]
)
genrule(
  name = "hippy_InfoPlist",
  srcs = [],
  outs = [
    "hippy_InfoPlist.plist"
  ],
  cmd = """cat <<EOF > $@
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleIdentifier</key>
	<string>org.cocoapods.hippy</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>hippy</string>
	<key>CFBundlePackageType</key>
	<string>FMWK</string>
	<key>CFBundleShortVersionString</key>
	<string>2.14.11</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleSupportedPlatforms</key>
	<array>
		<string>iPhoneSimulator</string>
		<string>iPhoneOS</string>
	</array>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>MinimumOSVersion</key>
	<string>10.0</string>
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer>
		<integer>2</integer>
	</array>
</dict>
</plist>

EOF"""
)