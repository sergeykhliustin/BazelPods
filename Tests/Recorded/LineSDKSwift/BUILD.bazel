load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
load('@build_bazel_rules_ios//rules:precompiled_apple_resource_bundle.bzl', 'precompiled_apple_resource_bundle')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "LineSDKSwift",
  module_name = "LineSDK",
  bundle_id = "org.cocoapods.LineSDKSwift",
  swift_version = "5",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":LineSDKSwift_InfoPlist"
  ],
  platforms = {
    "ios": "13.0"
  },
  srcs = glob(
    [
      "LineSDK/LineSDK/**/*.swift",
      "LineSDK/LineSDK/LineSDK.h"
    ]
  ),
  deps = [
    ":LineSDK_LineSDK_Bundle"
  ],
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_frameworks = [
    "SafariServices",
    "Security"
  ],
  xcconfig = {
    "OTHER_SWIFT_FLAGS": [
      "-DLineSDKCocoaPods"
    ]
  },
  visibility = [
    "//visibility:public"
  ]
)
precompiled_apple_resource_bundle(
  name = "LineSDK_LineSDK_Bundle",
  bundle_id = "org.cocoapods.LineSDK",
  bundle_name = "LineSDK",
  infoplists = [
    ":LineSDK_LineSDK_Bundle_InfoPlist"
  ],
  resources = glob(
    [
      "LineSDK/LineSDK/Assets.xcassets/**"
    ]
  )
)
