load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
load('@build_bazel_rules_ios//rules:precompiled_apple_resource_bundle.bzl', 'precompiled_apple_resource_bundle')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "JKSwiftExtension",
  module_name = "JKSwiftExtension",
  bundle_id = "org.cocoapods.JKSwiftExtension",
  swift_version = "5",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":JKSwiftExtension_InfoPlist"
  ],
  platforms = {
    "ios": "10.0"
  },
  srcs = glob(
    [
      "Sources/Classes/**/*.S",
      "Sources/Classes/**/*.c",
      "Sources/Classes/**/*.cc",
      "Sources/Classes/**/*.cpp",
      "Sources/Classes/**/*.cxx",
      "Sources/Classes/**/*.h",
      "Sources/Classes/**/*.hpp",
      "Sources/Classes/**/*.hxx",
      "Sources/Classes/**/*.m",
      "Sources/Classes/**/*.mm",
      "Sources/Classes/**/*.s",
      "Sources/Classes/**/*.swift"
    ]
  ),
  deps = [
    ":JKSwiftExtension_JKSwiftExtension_Bundle"
  ],
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_frameworks = [
    "AVFoundation",
    "AVKit",
    "AudioToolbox",
    "CoreFoundation",
    "CoreLocation",
    "CoreTelephony",
    "CryptoKit",
    "Photos",
    "StoreKit",
    "WebKit"
  ],
  visibility = [
    "//visibility:public"
  ]
)
precompiled_apple_resource_bundle(
  name = "JKSwiftExtension_JKSwiftExtension_Bundle",
  bundle_id = "org.cocoapods.JKSwiftExtension",
  bundle_name = "JKSwiftExtension",
  infoplists = [
    ":JKSwiftExtension_JKSwiftExtension_Bundle_InfoPlist"
  ],
  resources = glob(
    [
      "Sources/Assets/*.png"
    ]
  )
)
