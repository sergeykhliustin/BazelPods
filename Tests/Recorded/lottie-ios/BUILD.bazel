load('@build_bazel_rules_ios//rules:framework.bzl', 'apple_framework')
load('@build_bazel_rules_ios//rules:precompiled_apple_resource_bundle.bzl', 'precompiled_apple_resource_bundle')
# Add a config setting release for compilation mode
# Assume that people are using `opt` for release mode
# see the bazel user manual for more information
# https://docs.bazel.build/versions/master/be/general.html#config_setting
config_setting(
  name = "release",
  values = {
    "compilation_mode": "opt"
  }
)
apple_framework(
  name = "lottie-ios",
  module_name = "Lottie",
  bundle_id = "org.cocoapods.lottie-ios",
  swift_version = "5",
  link_dynamic = True,
  testonly = False,
  infoplists = [
    ":lottie-ios_InfoPlist"
  ],
  platforms = {
    "ios": "11.0"
  },
  srcs = glob(
    [
      "Sources/**/*.S",
      "Sources/**/*.c",
      "Sources/**/*.cc",
      "Sources/**/*.cpp",
      "Sources/**/*.cxx",
      "Sources/**/*.h",
      "Sources/**/*.hpp",
      "Sources/**/*.hxx",
      "Sources/**/*.m",
      "Sources/**/*.mm",
      "Sources/**/*.s",
      "Sources/**/*.swift"
    ]
  ),
  deps = [
    ":Lottie_Lottie_Privacy_Bundle"
  ],
  objc_defines = [
    "COCOAPODS=1"
  ] + select(
    {
      "//conditions:default": [
        "POD_CONFIGURATION_DEBUG=1",
        "DEBUG=1"
      ],
      ":release": [
        "POD_CONFIGURATION_RELEASE=1"
      ]
    }
  ),
  swift_defines = [
    "COCOAPODS"
  ] + select(
    {
      "//conditions:default": [
        "DEBUG"
      ]
    }
  ),
  sdk_frameworks = [
    "CoreGraphics",
    "QuartzCore",
    "UIKit",
    "CoreFoundation",
    "CoreText"
  ],
  weak_sdk_frameworks = [
    "Combine",
    "SwiftUI"
  ],
  visibility = [
    "//visibility:public"
  ]
)
precompiled_apple_resource_bundle(
  name = "Lottie_Lottie_Privacy_Bundle",
  bundle_id = "org.cocoapods.Lottie_Privacy",
  bundle_name = "Lottie_Privacy",
  infoplists = [
    ":Lottie_Lottie_Privacy_Bundle_InfoPlist"
  ],
  resources = glob(
    [
      "Sources/PrivacyInfo.xcprivacy"
    ]
  )
)
genrule(
  name = "lottie-ios_InfoPlist",
  srcs = [],
  outs = [
    "lottie-ios_InfoPlist.plist"
  ],
  cmd = """cat <<EOF > $@
